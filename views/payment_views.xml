<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Request Form View -->
    <record id="view_payment_request_form" model="ir.ui.view">
        <field name="name">sama.promis.payment.request.form</field>
        <field name="model">sama.promis.payment.request</field>
        <field name="arch" type="xml">
            <form string="Payment Request">
                <header>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,approved,rejected,paid"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_submit" string="Submit" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_approve" string="Approve" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                        <button name="action_reject" string="Reject" type="object" class="oe_highlight" invisible="state != 'submitted'"/>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="project_id" required="1"/>
                            <field name="contract_id" required="1"/>
                        </group>
                        <group>
                            <field name="request_date" required="1"/>
                            <field name="amount" required="1"/>
                            <field name="currency_id" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Payment Request List View -->
    <record id="view_payment_request_tree" model="ir.ui.view">
        <field name="name">sama.promis.payment.request.list</field>
        <field name="model">sama.promis.payment.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="project_id"/>
                <field name="request_date"/>
                <field name="amount" sum="Total"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>
    
    <!-- Actions -->
    <record id="action_payment_request" model="ir.actions.act_window">
        <field name="name">Payment Requests</field>
        <field name="res_model">sama.promis.payment.request</field>
        <field name="view_mode">list,form</field>
    </record>
    
</odoo>
