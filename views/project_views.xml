<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des projets -->
    <record id="view_sama_promis_project_tree" model="ir.ui.view">
        <field name="name">sama.promis.project.tree</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <list string="Projets SAMA PROMIS" decoration-info="state=='draft'" decoration-warning="state=='under_review'" decoration-success="state=='completed'">
                <field name="reference"/>
                <field name="name"/>
                <field name="project_type"/>
                <field name="partner_id"/>
                <field name="donor_id"/>
                <field name="total_budget" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='under_review'" decoration-success="state=='completed'"/>
                <field name="priority" widget="priority"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="progress_percentage" widget="progressbar"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire des projets -->
    <record id="view_sama_promis_project_form" model="ir.ui.view">
        <field name="name">sama.promis.project.form</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <form string="Projet SAMA PROMIS">
                <header>
                    <!-- Boutons d'action inspirés de SAMA ETAT -->
                    <button name="action_submit_for_review" type="object" string="Soumettre" class="oe_highlight" states="draft"/>
                    <button name="action_start_review" type="object" string="Réviser" class="oe_highlight" states="submitted"/>
                    <button name="action_approve_project" type="object" string="Approuver" class="oe_highlight" states="under_review"/>
                    <button name="action_start_implementation" type="object" string="Démarrer" class="oe_highlight" states="approved"/>
                    <button name="action_suspend_project" type="object" string="Suspendre" states="in_progress"/>
                    <button name="action_resume_project" type="object" string="Reprendre" states="suspended"/>
                    <button name="action_complete_project" type="object" string="Terminer" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel_project" type="object" string="Annuler" states="draft,submitted,under_review,approved,in_progress,suspended"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,under_review,approved,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_qr_code" type="object" class="oe_stat_button" icon="fa-qrcode">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">QR Code</span>
                            </div>
                        </button>
                        <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-contract">
                            <field name="contract_ids" widget="statinfo" string="Contrats"/>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money-bill">
                            <field name="payment_ids" widget="statinfo" string="Paiements"/>
                        </button>
                        <button name="action_view_evaluations" type="object" class="oe_stat_button" icon="fa-chart-line">
                            <field name="evaluation_ids" widget="statinfo" string="Évaluations"/>
                        </button>
                        <button name="action_view_funding_sources" type="object" class="oe_stat_button" icon="fa-hand-holding-usd">
                            <field name="funding_sources_count" widget="statinfo" string="Sources de Financement"/>
                        </button>
                        <button name="action_view_procurement_plans" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                            <field name="procurement_plan_count" widget="statinfo" string="Plans de Passation"/>
                        </button>
                        <button name="action_view_compliance_tasks" type="object" class="oe_stat_button" icon="fa-check-square"
                                invisible="not use_compliance_profile">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="compliance_task_count"/> / <field name="compliance_tasks_completed"/>
                                </span>
                                <span class="o_stat_text">Tâches Conformité</span>
                            </div>
                        </button>
                        <button name="action_view_compliance_profile" type="object" class="oe_stat_button" icon="fa-shield-alt"
                                invisible="not compliance_profile_id">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value">
                                    <field name="compliance_rate" widget="percentage"/>
                                </span>
                                <span class="o_stat_text">Taux Conformité</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du projet"/>
                        </h1>
                        <h2>
                            <field name="reference" readonly="1"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="project_type"/>
                            <field name="priority"/>
                            <field name="partner_id"/>
                            <field name="donor_id"/>
                            <field name="call_for_proposal_id"/>
                        </group>
                        <group>
                            <field name="use_multi_source_funding"/>
                            <field name="total_budget" invisible="use_multi_source_funding"/>
                            <field name="currency_id"/>
                            <field name="donor_contribution" invisible="use_multi_source_funding"/>
                            <field name="partner_contribution" invisible="use_multi_source_funding"/>
                            <field name="total_budget_computed" invisible="not use_multi_source_funding" readonly="1"/>
                            <field name="total_international_funding" invisible="not use_multi_source_funding" readonly="1"/>
                            <field name="total_local_funding" invisible="not use_multi_source_funding" readonly="1"/>
                            <field name="progress_percentage" widget="progressbar"/>
                            <field name="use_compliance_profile"/>
                            <field name="compliance_profile_id" invisible="not use_compliance_profile" required="use_compliance_profile"/>
                            <field name="compliance_profile_manual" invisible="not use_compliance_profile"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" nolabel="1" placeholder="Description détaillée du projet"/>
                                <field name="objectives" string="Objectifs"/>
                                <field name="expected_results" string="Résultats Attendus"/>
                            </group>
                        </page>
                        
                        <page string="Dates et Localisation">
                            <group>
                                <group string="Dates">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="submission_date"/>
                                    <field name="approval_date"/>
                                    <field name="actual_start_date"/>
                                    <field name="actual_end_date"/>
                                    <field name="deadline"/>
                                </group>
                                <group string="Localisation">
                                    <field name="region"/>
                                    <field name="department"/>
                                    <field name="commune"/>
                                    <field name="target_population"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Partenaires">
                            <field name="implementing_partner_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="partner_type"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Finances">
                            <div class="alert alert-info" invisible="not use_multi_source_funding">
                                <p><strong>Mode multi-sources activé.</strong> Le budget total est calculé automatiquement à partir des sources de financement.</p>
                            </div>
                            <group>
                                <group string="Budget">
                                    <field name="spent_amount"/>
                                    <field name="remaining_budget"/>
                                    <field name="budget_utilization_rate" widget="progressbar"/>
                                </group>
                                <group string="Indicateurs">
                                    <field name="duration_days"/>
                                    <field name="is_delayed"/>
                                    <field name="delay_days" invisible="not is_delayed"/>
                                    <field name="days_to_deadline"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Sources de Financement" invisible="not use_multi_source_funding">
                            <group>
                                <group>
                                    <button name="action_migrate_legacy_funding" type="object" string="Migrer les données existantes" 
                                            class="btn-primary" invisible="funding_sources_count > 0"/>
                                    <field name="funding_sources_count" invisible="1"/>
                                </group>
                            </group>
                            <field name="funding_source_ids" context="{'default_project_id': id, 'default_currency_id': currency_id}">
                                <list editable="bottom" multi_edit="1" decoration-success="state=='received'" decoration-muted="state=='cancelled'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="partner_id" domain="[('is_donor', '=', True)]"/>
                                    <field name="amount" sum="Total"/>
                                    <field name="currency_id" groups="base.group_multi_currency"/>
                                    <field name="funding_type"/>
                                    <field name="funding_origin" readonly="1"/>
                                    <field name="funding_origin_manual"/>
                                    <field name="percentage_of_total" widget="percentage"/>
                                    <field name="state"/>
                                    <field name="commitment_date"/>
                                    <field name="received_date"/>
                                </list>
                                <form>
                                    <header>
                                        <button name="action_confirm" type="object" string="Confirmer" states="draft" class="btn-primary"/>
                                        <button name="action_mark_received" type="object" string="Marquer comme Reçu" states="confirmed" class="btn-primary"/>
                                        <button name="action_cancel" type="object" string="Annuler" states="draft,confirmed"/>
                                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,received"/>
                                    </header>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="name"/>
                                                <field name="partner_id" domain="[('is_donor', '=', True)]"/>
                                                <field name="amount"/>
                                                <field name="currency_id" groups="base.group_multi_currency"/>
                                                <field name="funding_type"/>
                                            </group>
                                            <group>
                                                <field name="funding_origin" readonly="1"/>
                                                <field name="funding_origin_manual"/>
                                                <field name="percentage_of_total" widget="percentage"/>
                                                <field name="commitment_date"/>
                                                <field name="received_date"/>
                                                <field name="contract_reference"/>
                                            </group>
                                        </group>
                                        <group>
                                            <field name="description" placeholder="Notes additionnelles sur cette source de financement..."/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_budget_computed" class="oe_subtotal_footer_separator" widget="monetary"/>
                                <field name="total_international_funding" widget="monetary"/>
                                <field name="total_local_funding" widget="monetary"/>
                            </group>
                        </page>
                        
                        <page string="Conformité" invisible="not use_compliance_profile">
                            <div class="alert alert-warning" invisible="overdue_compliance_tasks == 0">
                                <strong>Attention!</strong> <field name="overdue_compliance_tasks"/> tâche(s) de conformité en retard.
                            </div>
                            
                            <group>
                                <group string="Profil de Conformité">
                                    <field name="compliance_profile_id" readonly="1"/>
                                    <button name="action_view_compliance_profile" type="object" string="Voir le Profil" class="btn-link"/>
                                </group>
                                <group string="Rapportage">
                                    <field name="last_compliance_report_date" readonly="1"/>
                                    <field name="next_compliance_report_date" readonly="1"/>
                                    <field name="compliance_report_status" widget="badge" 
                                           decoration-success="compliance_report_status=='on_time'"
                                           decoration-warning="compliance_report_status=='due_soon'"
                                           decoration-danger="compliance_report_status=='overdue'"/>
                                    <button name="action_submit_compliance_report" type="object" string="Soumettre Rapport" class="btn-primary"/>
                                </group>
                            </group>
                            
                            <group>
                                <button name="action_generate_compliance_tasks" type="object" string="Générer Tâches depuis Profil" 
                                        class="btn-secondary" invisible="compliance_task_count > 0"/>
                            </group>
                            
                            <field name="compliance_task_ids" context="{'default_project_id': id, 'default_responsible_id': uid}">
                                <list editable="bottom" multi_edit="1" decoration-danger="is_overdue==True" decoration-success="state in ['completed','approved']">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="task_type"/>
                                    <field name="responsible_id"/>
                                    <field name="deadline"/>
                                    <field name="days_until_deadline"/>
                                    <field name="priority" widget="priority"/>
                                    <field name="state" widget="badge"/>
                                    <field name="is_overdue" invisible="1"/>
                                </list>
                            </field>
                            
                            <group class="oe_subtotal_footer oe_right">
                                <field name="compliance_rate" widget="progressbar" string="Taux de Conformité"/>
                            </group>
                        </page>
                        
                        <page string="QR Code">
                            <group>
                                <field name="qr_code_image" widget="image" options="{'size': [200, 200]}"/>
                                <field name="qr_code_url" widget="url"/>
                            </group>
                        </page>
                        
                        <page string="Audit">
                            <group>
                                <group string="Création">
                                    <field name="created_by" readonly="1"/>
                                    <field name="created_date" readonly="1"/>
                                </group>
                                <group string="Modification">
                                    <field name="last_modified_by" readonly="1"/>
                                    <field name="last_modified_date" readonly="1"/>
                                    <field name="version" readonly="1"/>
                                </group>
                            </group>
                            <field name="state_history" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue kanban des projets -->
    <record id="view_sama_promis_project_kanban" model="ir.ui.view">
        <field name="name">sama.promis.project.kanban</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="donor_id"/>
                <field name="total_budget"/>
                <field name="progress_percentage"/>
                <field name="priority"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="reference"/>
                                    </small>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="total_budget" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="progress_percentage" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les projets -->
    <record id="action_sama_promis_project" model="ir.actions.act_window">
        <field name="name">Projets</field>
        <field name="res_model">sama.promis.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau projet SAMA PROMIS
            </p>
            <p>
                Gérez vos projets de bailleurs de fonds internationaux avec des cycles de vie complets,
                des QR codes automatiques et un suivi détaillé.
            </p>
        </field>
    </record>
</odoo>