<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- COMPLIANCE TASK VIEWS                        -->
    <!-- ============================================ -->

    <!-- Tree View -->
    <record id="view_sama_promis_compliance_task_tree" model="ir.ui.view">
        <field name="name">sama.promis.compliance.task.tree</field>
        <field name="model">sama.promis.compliance.task</field>
        <field name="arch" type="xml">
            <list string="Tâches de Conformité" 
                  editable="bottom"
                  multi_edit="1"
                  decoration-danger="is_overdue==True" 
                  decoration-success="state in ['completed','approved']" 
                  decoration-warning="state=='under_review'">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="task_type"/>
                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="responsible_id"/>
                <field name="deadline"/>
                <field name="days_until_deadline"/>
                <field name="priority" widget="priority"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='pending'" 
                       decoration-warning="state in ['in_progress','submitted']" 
                       decoration-success="state in ['completed','approved']"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sama_promis_compliance_task_form" model="ir.ui.view">
        <field name="name">sama.promis.compliance.task.form</field>
        <field name="model">sama.promis.compliance.task</field>
        <field name="arch" type="xml">
            <form string="Tâche de Conformité">
                <header>
                    <button name="action_start" string="Démarrer" type="object" 
                            class="oe_highlight" states="pending"/>
                    <button name="action_request_approval" string="Soumettre" type="object" 
                            class="oe_highlight" states="in_progress"/>
                    <button name="action_approve" string="Approuver" type="object" 
                            class="oe_highlight" states="submitted,under_review"/>
                    <button name="action_reject" string="Rejeter" type="object" 
                            states="submitted,under_review"/>
                    <button name="action_mark_completed" string="Marquer Terminé" type="object" 
                            class="oe_highlight" states="in_progress,approved"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            states="pending,in_progress,submitted"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="pending,in_progress,submitted,approved,completed"/>
                </header>
                
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(base.action_attachment)d" type="action" class="oe_stat_button" icon="fa-files-o"
                                invisible="not requires_document"
                                context="{'default_res_model': 'sama.promis.compliance.task', 'default_res_id': id}">
                            <field name="document_ids" widget="statinfo" string="Documents"/>
                        </button>
                    </div>
                    
                    <div class="alert alert-danger" invisible="not is_overdue">
                        <strong>⚠️ ATTENTION!</strong> Cette tâche est en retard de 
                        <field name="days_overdue" class="oe_inline"/> jour(s).
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom de la tâche..."/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True}"/>
                            <field name="contract_id" options="{'no_create': True}" 
                                   domain="[('project_id', '=', project_id)]"/>
                            <field name="compliance_profile_id" readonly="1"/>
                            <field name="task_type"/>
                            <field name="priority" widget="priority"/>
                        </group>
                        <group>
                            <field name="responsible_id"/>
                            <field name="deadline"/>
                            <field name="planned_completion_date"/>
                            <field name="actual_completion_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Statut">
                        <group>
                            <field name="days_until_deadline"/>
                            <field name="is_overdue"/>
                        </group>
                        <group>
                            <field name="days_overdue" invisible="not is_overdue"/>
                        </group>
                    </group>
                    
                    <group string="Exigences de Conformité">
                        <group>
                            <field name="requires_document"/>
                            <field name="requires_approval"/>
                        </group>
                        <group>
                            <field name="approved_by" readonly="1" invisible="not approved_by"/>
                            <field name="approval_date" readonly="1" invisible="not approval_date"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="html" placeholder="Description détaillée de la tâche..."/>
                        </page>
                        
                        <page string="Documents" invisible="not requires_document">
                            <field name="document_ids" widget="many2many_binary" mode="tree,kanban"/>
                        </page>
                        
                        <page string="Checklist" invisible="task_type != 'checklist'">
                            <group>
                                <field name="checklist_items" widget="text" placeholder='Format JSON exemple:
[
  {"item": "Vérifier les documents", "completed": false},
  {"item": "Obtenir les signatures", "completed": false},
  {"item": "Soumettre au bailleur", "completed": false}
]'/>
                                <field name="checklist_completion_rate" widget="progressbar"/>
                            </group>
                        </page>
                        
                        <page string="Approbation">
                            <group>
                                <field name="approval_notes" placeholder="Notes et commentaires d'approbation..."/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approval_date" readonly="1"/>
                            </group>
                        </page>
                        
                        <page string="Notifications">
                            <group>
                                <group>
                                    <field name="reminder_sent" readonly="1"/>
                                    <field name="reminder_sent_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="escalation_sent" readonly="1"/>
                                    <field name="escalation_sent_date" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Historique">
                            <field name="state_history" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_sama_promis_compliance_task_kanban" model="ir.ui.view">
        <field name="name">sama.promis.compliance.task.kanban</field>
        <field name="model">sama.promis.compliance.task</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="task_type"/>
                <field name="deadline"/>
                <field name="responsible_id"/>
                <field name="priority"/>
                <field name="is_overdue"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_2' : ''}">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_top_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="task_type"/>
                                    <br/>
                                    <i class="fa fa-calendar"/> <field name="deadline"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="responsible_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Calendar View -->
    <record id="view_sama_promis_compliance_task_calendar" model="ir.ui.view">
        <field name="name">sama.promis.compliance.task.calendar</field>
        <field name="model">sama.promis.compliance.task</field>
        <field name="arch" type="xml">
            <calendar string="Tâches de Conformité" 
                      date_start="deadline" 
                      color="priority" 
                      mode="month">
                <field name="name"/>
                <field name="responsible_id"/>
                <field name="task_type"/>
            </calendar>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sama_promis_compliance_task_search" model="ir.ui.view">
        <field name="name">sama.promis.compliance.task.search</field>
        <field name="model">sama.promis.compliance.task</field>
        <field name="arch" type="xml">
            <search string="Rechercher Tâches de Conformité">
                <field name="name"/>
                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="responsible_id"/>
                
                <filter string="En Attente" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="En Cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Terminé" name="completed" domain="[('state', 'in', ['completed', 'approved'])]"/>
                <filter string="En Retard" name="overdue" domain="[('is_overdue', '=', True)]"/>
                
                <separator/>
                
                <filter string="Jalon" name="milestone" domain="[('task_type', '=', 'milestone')]"/>
                <filter string="Livrable" name="deliverable" domain="[('task_type', '=', 'deliverable')]"/>
                <filter string="Rapport" name="report" domain="[('task_type', '=', 'report')]"/>
                <filter string="Checklist" name="checklist" domain="[('task_type', '=', 'checklist')]"/>
                
                <separator/>
                
                <filter string="Critique" name="critical" domain="[('priority', '=', 'critical')]"/>
                <filter string="Élevée" name="high" domain="[('priority', '=', 'high')]"/>
                
                <separator/>
                
                <filter string="Mes Tâches" name="my_tasks" domain="[('responsible_id', '=', uid)]"/>
                <filter string="Échéance Cette Semaine" name="due_this_week" 
                        domain="[('deadline', '&gt;=', (context_today()).strftime('%Y-%m-%d')), ('deadline', '&lt;=', (context_today()+datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                <filter string="Échéance Ce Mois" name="due_this_month" 
                        domain="[('deadline', '&gt;=', (context_today()).strftime('%Y-%m-01')), ('deadline', '&lt;=', (context_today()+relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                
                <group expand="0" string="Grouper Par">
                    <filter string="Projet" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Contrat" name="group_contract" context="{'group_by': 'contract_id'}"/>
                    <filter string="Type" name="group_type" context="{'group_by': 'task_type'}"/>
                    <filter string="Responsable" name="group_responsible" context="{'group_by': 'responsible_id'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Échéance" name="group_deadline" context="{'group_by': 'deadline:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_sama_promis_compliance_task" model="ir.actions.act_window">
        <field name="name">Tâches de Conformité</field>
        <field name="res_model">sama.promis.compliance.task</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer une nouvelle tâche de conformité
            </p>
            <p>
                Les tâches de conformité permettent de suivre les jalons, livrables, rapports
                et autres exigences de conformité pour vos projets et contrats.
            </p>
        </field>
    </record>

    <record id="action_sama_promis_compliance_task_my" model="ir.actions.act_window">
        <field name="name">Mes Tâches de Conformité</field>
        <field name="res_model">sama.promis.compliance.task</field>
        <field name="view_mode">tree,form,kanban,calendar</field>
        <field name="domain">[('responsible_id', '=', uid)]</field>
        <field name="context">{'search_default_in_progress': 1}</field>
    </record>

    <record id="action_sama_promis_compliance_task_overdue" model="ir.actions.act_window">
        <field name="name">Tâches en Retard</field>
        <field name="res_model">sama.promis.compliance.task</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="domain">[('is_overdue', '=', True)]</field>
        <field name="context">{}</field>
    </record>

</odoo>
