<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- PROCUREMENT PLAN VIEWS                       -->
    <!-- ============================================ -->

    <!-- Tree View -->
    <record id="view_sama_promis_procurement_plan_tree" model="ir.ui.view">
        <field name="name">sama.promis.procurement.plan.tree</field>
        <field name="model">sama.promis.procurement.plan</field>
        <field name="arch" type="xml">
            <list string="Plans de Passation de Marché" 
                  decoration-info="state=='draft'" 
                  decoration-warning="state=='in_execution'" 
                  decoration-success="state=='completed'" 
                  decoration-muted="state=='cancelled'">
                <field name="reference"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="plan_type"/>
                <field name="plan_start_date"/>
                <field name="plan_end_date"/>
                <field name="total_estimated_cost" sum="Total Estimé"/>
                <field name="completion_rate" widget="progressbar"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='draft'" 
                       decoration-warning="state=='in_execution'" 
                       decoration-success="state=='completed'"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sama_promis_procurement_plan_form" model="ir.ui.view">
        <field name="name">sama.promis.procurement.plan.form</field>
        <field name="model">sama.promis.procurement.plan</field>
        <field name="arch" type="xml">
            <form string="Plan de Passation de Marché">
                <header>
                    <button name="action_validate" string="Valider" type="object" 
                            class="oe_highlight" states="draft"/>
                    <button name="action_start_execution" string="Démarrer Exécution" type="object" 
                            class="oe_highlight" states="validated"/>
                    <button name="action_complete" string="Marquer Terminé" type="object" 
                            class="oe_highlight" states="in_execution"/>
                    <button name="action_cancel" string="Annuler" type="object" 
                            states="draft,validated,in_execution" 
                            confirm="Êtes-vous sûr de vouloir annuler ce plan?"/>
                    <button name="action_reset_to_draft" string="Réinitialiser" type="object" 
                            states="validated,cancelled"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,validated,in_execution,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lines" type="object" class="oe_stat_button" icon="fa-list">
                            <field name="line_count" widget="statinfo" string="Lignes"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Titre du plan de passation..."/>
                        </h1>
                        <h2>
                            <field name="reference" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="project_id" options="{'no_create': True}"/>
                            <field name="contract_id" options="{'no_create': True}" 
                                   domain="[('project_id', '=', project_id)]"/>
                            <field name="plan_type"/>
                            <field name="responsible_id"/>
                        </group>
                        <group>
                            <field name="fiscal_year"/>
                            <field name="plan_start_date"/>
                            <field name="plan_end_date"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                    </group>
                    
                    <group string="Résumé Financier">
                        <group>
                            <field name="total_estimated_cost"/>
                            <field name="total_actual_cost"/>
                        </group>
                        <group>
                            <field name="budget_variance"/>
                            <field name="budget_variance_percentage" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group string="Statistiques">
                        <group>
                            <field name="line_count"/>
                            <field name="completed_line_count"/>
                            <field name="completion_rate" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="is_overdue"/>
                            <field name="days_remaining"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Lignes de Passation">
                            <field name="line_ids" context="{'default_plan_id': id}">
                                <list string="Lignes de Passation" editable="bottom" multi_edit="1" 
                                      decoration-info="state=='planned'" 
                                      decoration-warning="state=='in_progress'" 
                                      decoration-success="state=='completed'">
                                    <field name="sequence" widget="handle"/>
                                    <field name="description"/>
                                    <field name="procurement_method"/>
                                    <field name="procurement_category"/>
                                    <field name="estimated_cost" sum="Total Estimé"/>
                                    <field name="actual_cost" sum="Total Réel"/>
                                    <field name="planned_date"/>
                                    <field name="planned_completion_date"/>
                                    <field name="state" widget="badge"/>
                                    <field name="supplier_id"/>
                                </list>
                                <form string="Ligne de Passation">
                                    <header>
                                        <button name="action_start_procurement" string="Démarrer" type="object" 
                                                class="oe_highlight" states="planned"/>
                                        <button name="action_award" string="Attribuer" type="object" 
                                                class="oe_highlight" states="in_progress"/>
                                        <button name="action_contract" string="Contracter" type="object" 
                                                class="oe_highlight" states="awarded"/>
                                        <button name="action_complete" string="Terminer" type="object" 
                                                class="oe_highlight" states="contracted"/>
                                        <button name="action_cancel" string="Annuler" type="object" 
                                                states="planned,in_progress,awarded"/>
                                        <field name="state" widget="statusbar"/>
                                    </header>
                                    <sheet>
                                        <div class="oe_title">
                                            <h1>
                                                <field name="description" placeholder="Description de la passation..."/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="plan_id" readonly="1"/>
                                                <field name="procurement_method"/>
                                                <field name="procurement_category"/>
                                                <field name="threshold_type"/>
                                                <field name="requires_prior_review"/>
                                            </group>
                                            <group>
                                                <field name="currency_id" invisible="1"/>
                                                <field name="estimated_cost"/>
                                                <field name="actual_cost"/>
                                                <field name="cost_variance"/>
                                                <field name="cost_variance_percentage" widget="progressbar"/>
                                            </group>
                                        </group>
                                        <group string="Calendrier">
                                            <group>
                                                <field name="planned_date"/>
                                                <field name="planned_completion_date"/>
                                            </group>
                                            <group>
                                                <field name="actual_start_date"/>
                                                <field name="actual_completion_date"/>
                                                <field name="delay_days"/>
                                                <field name="is_delayed"/>
                                            </group>
                                        </group>
                                        <group string="Détails d'Exécution">
                                            <group>
                                                <field name="supplier_id"/>
                                                <field name="contract_reference"/>
                                                <field name="reference"/>
                                            </group>
                                            <group>
                                                <field name="review_status"/>
                                                <field name="donor_approval_date"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Description Détaillée">
                                                <field name="detailed_description"/>
                                            </page>
                                            <page string="Notes de Progression">
                                                <field name="progress_notes"/>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page string="Description">
                            <field name="description" widget="html"/>
                        </page>
                        <page string="Historique">
                            <group>
                                <field name="approval_date" readonly="1"/>
                                <field name="completion_date" readonly="1"/>
                            </group>
                            <field name="state_history" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sama_promis_procurement_plan_search" model="ir.ui.view">
        <field name="name">sama.promis.procurement.plan.search</field>
        <field name="model">sama.promis.procurement.plan</field>
        <field name="arch" type="xml">
            <search string="Rechercher Plans de Passation">
                <field name="name" string="Nom ou Référence" 
                       filter_domain="['|', ('name', 'ilike', self), ('reference', 'ilike', self)]"/>
                <field name="project_id"/>
                <field name="contract_id"/>
                <field name="responsible_id"/>
                
                <filter string="Brouillon" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Validé" name="validated" domain="[('state', '=', 'validated')]"/>
                <filter string="En Exécution" name="in_execution" domain="[('state', '=', 'in_execution')]"/>
                <filter string="Terminé" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Annulé" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter string="Annuel" name="annual" domain="[('plan_type', '=', 'annual')]"/>
                <filter string="Spécifique au Projet" name="project_specific" 
                        domain="[('plan_type', '=', 'project_specific')]"/>
                <filter string="Urgence" name="emergency" domain="[('plan_type', '=', 'emergency')]"/>
                
                <separator/>
                <filter string="Cette Année" name="this_year" 
                        domain="[('plan_start_date', '&gt;=', (context_today() - relativedelta(months=12)).strftime('%Y-01-01')), 
                                 ('plan_start_date', '&lt;=', (context_today() - relativedelta(months=12)).strftime('%Y-12-31'))]"/>
                <filter string="En Retard" name="overdue" domain="[('is_overdue', '=', True)]"/>
                
                <separator/>
                <filter string="Mes Plans" name="my_plans" domain="[('responsible_id', '=', uid)]"/>
                
                <group expand="0" string="Grouper Par">
                    <filter string="Projet" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Contrat" name="group_contract" context="{'group_by': 'contract_id'}"/>
                    <filter string="Type de Plan" name="group_plan_type" context="{'group_by': 'plan_type'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Année Fiscale" name="group_fiscal_year" context="{'group_by': 'fiscal_year'}"/>
                    <filter string="Responsable" name="group_responsible" context="{'group_by': 'responsible_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- PROCUREMENT PLAN LINE VIEWS                  -->
    <!-- ============================================ -->

    <!-- Procurement Line Tree View -->
    <record id="view_sama_promis_procurement_plan_line_tree" model="ir.ui.view">
        <field name="name">sama.promis.procurement.plan.line.tree</field>
        <field name="model">sama.promis.procurement.plan.line</field>
        <field name="arch" type="xml">
            <list string="Lignes de Passation" 
                  decoration-info="state=='planned'" 
                  decoration-warning="state=='in_progress'" 
                  decoration-success="state=='completed'" 
                  editable="bottom"
                  multi_edit="1">
                <field name="sequence" widget="handle"/>
                <field name="description"/>
                <field name="plan_id"/>
                <field name="procurement_method"/>
                <field name="procurement_category"/>
                <field name="estimated_cost" sum="Total Estimé"/>
                <field name="actual_cost" sum="Total Réel"/>
                <field name="planned_date"/>
                <field name="planned_completion_date"/>
                <field name="state" widget="badge" 
                       decoration-info="state=='planned'" 
                       decoration-warning="state=='in_progress'" 
                       decoration-success="state=='completed'"/>
                <field name="supplier_id"/>
            </list>
        </field>
    </record>

    <!-- Procurement Line Search View -->
    <record id="view_sama_promis_procurement_plan_line_search" model="ir.ui.view">
        <field name="name">sama.promis.procurement.plan.line.search</field>
        <field name="model">sama.promis.procurement.plan.line</field>
        <field name="arch" type="xml">
            <search string="Rechercher Lignes de Passation">
                <field name="description"/>
                <field name="reference"/>
                <field name="contract_reference"/>
                <field name="plan_id"/>
                <field name="supplier_id"/>
                
                <filter string="Planifié" name="planned" domain="[('state', '=', 'planned')]"/>
                <filter string="En Cours" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Attribué" name="awarded" domain="[('state', '=', 'awarded')]"/>
                <filter string="Contracté" name="contracted" domain="[('state', '=', 'contracted')]"/>
                <filter string="Terminé" name="completed" domain="[('state', '=', 'completed')]"/>
                <filter string="Annulé" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                
                <separator/>
                <filter string="Appel d'Offres Ouvert" name="open_tender" 
                        domain="[('procurement_method', '=', 'open_tender')]"/>
                <filter string="Gré à Gré" name="direct_contracting" 
                        domain="[('procurement_method', '=', 'direct_contracting')]"/>
                
                <separator/>
                <filter string="Biens" name="goods" domain="[('procurement_category', '=', 'goods')]"/>
                <filter string="Travaux" name="works" domain="[('procurement_category', '=', 'works')]"/>
                <filter string="Services" name="services" domain="[('procurement_category', '=', 'services')]"/>
                
                <separator/>
                <filter string="En Retard" name="delayed" domain="[('is_delayed', '=', True)]"/>
                <filter string="Revue Préalable Requise" name="requires_review" 
                        domain="[('requires_prior_review', '=', True)]"/>
                
                <group expand="0" string="Grouper Par">
                    <filter string="Plan" name="group_plan" context="{'group_by': 'plan_id'}"/>
                    <filter string="Méthode de Passation" name="group_method" 
                            context="{'group_by': 'procurement_method'}"/>
                    <filter string="Catégorie" name="group_category" 
                            context="{'group_by': 'procurement_category'}"/>
                    <filter string="État" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Fournisseur" name="group_supplier" context="{'group_by': 'supplier_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ============================================ -->
    <!-- ACTIONS                                      -->
    <!-- ============================================ -->

    <!-- Action for Procurement Plans -->
    <record id="action_sama_promis_procurement_plan" model="ir.actions.act_window">
        <field name="name">Plans de Passation de Marché</field>
        <field name="res_model">sama.promis.procurement.plan</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau plan de passation de marché
            </p>
            <p>
                Les plans de passation de marché permettent de planifier et suivre 
                toutes les activités de passation de marché liées à vos projets.
            </p>
        </field>
    </record>

    <!-- Action for Procurement Lines -->
    <record id="action_sama_promis_procurement_plan_line" model="ir.actions.act_window">
        <field name="name">Lignes de Passation</field>
        <field name="res_model">sama.promis.procurement.plan.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucune ligne de passation trouvée
            </p>
            <p>
                Les lignes de passation représentent les activités individuelles 
                de passation de marché dans vos plans.
            </p>
        </field>
    </record>

</odoo>
