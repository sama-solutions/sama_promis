<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Evaluation Form View -->
    <record id="view_project_evaluation_form" model="ir.ui.view">
        <field name="name">sama.promis.project.evaluation.form</field>
        <field name="model">sama.promis.project.evaluation</field>
        <field name="arch" type="xml">
            <form string="Project Evaluation">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_start_evaluation" 
                                string="Start Evaluation" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'draft'"/>
                        <button name="action_complete_evaluation" 
                                string="Complete Evaluation" 
                                type="object" 
                                class="oe_highlight"
                                invisible="state != 'in_progress'"/>
                    </div>
                    
                    <group>
                        <group>
                            <field name="project_id" readonly="1"/>
                            <field name="call_id" readonly="1"/>
                            <field name="evaluator_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="evaluation_date" readonly="1"/>
                            <field name="score" readonly="1"/>
                            <field name="state" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Evaluation Criteria">
                            <field name="criterion_ids" readonly="state == 'completed'">
                                <list editable="bottom">
                                    <field name="criteria_id" readonly="1"/>
                                    <field name="max_score" readonly="1"/>
                                    <field name="score" required="1"/>
                                    <field name="notes"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" placeholder="Enter any additional evaluation notes here..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Evaluation List View -->
    <record id="view_project_evaluation_tree" model="ir.ui.view">
        <field name="name">sama.promis.project.evaluation.list</field>
        <field name="model">sama.promis.project.evaluation</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list>
                <field name="project_id"/>
                <field name="evaluator_id"/>
                <field name="evaluation_date"/>
                <field name="score" widget="progressbar" options="{'editable': false}"/>
                <field name="state" widget="badge" decoration-success="state == 'completed'" decoration-warning="state == 'in_progress'"/>
            </list>
        </field>
    </record>
    
    <!-- Evaluation Search View -->
    <record id="view_project_evaluation_search" model="ir.ui.view">
        <field name="name">sama.promis.project.evaluation.search</field>
        <field name="model">sama.promis.project.evaluation</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_id"/>
                <field name="evaluator_id"/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Completed" name="completed" domain="[('state','=','completed')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Evaluator" name="group_evaluator" context="{'group_by':'evaluator_id'}"/>
                    <filter string="State" name="group_state" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
