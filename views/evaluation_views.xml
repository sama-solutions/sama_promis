    <!-- Actions -->
    <record id="action_project_evaluation" model="ir.actions.act_window">
        <field name="name">Project Evaluations</field>
        <field name="res_model">sama.promis.project.evaluation</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_project_evaluation_search"/>
        <field name="context">{"search_default_my_evaluations": 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No evaluations found. Let's create one!
            </p>
        </field>
    </record>
    
    <!-- Server Actions -->
    <record id="action_start_evaluation" model="ir.actions.server">
        <field name="name">Start Evaluation</field>
        <field name="model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="binding_model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_start_evaluation()
        </field>
    </record>
    
    <record id="action_complete_evaluation" model="ir.actions.server">
        <field name="name">Complete Evaluation</field>
        <field name="model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="binding_model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="binding_view_types">list,form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                records.action_complete_evaluation()
        </field>
    </record>
</odoo>
