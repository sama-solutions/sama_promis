    <!-- Partner Search View Extension -->
    <record id="view_partner_search_inherit_sama_promis" model="ir.ui.view">
        <field name="name">res.partner.search.inherit.sama.promis</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='supplier']" position="after">
                <separator/>
                <filter string="Bailleurs de Fonds" name="donors" domain="[('is_donor', '=', True)]"/>
                <filter string="Type de Bailleur" name="group_donor_type" context="{'group_by':'donor_type'}" help="Type de Bailleur"/>
            </xpath>
        </field>
    </record>
</odoo>
