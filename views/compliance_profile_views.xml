<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ============================================ -->
    <!-- COMPLIANCE PROFILE VIEWS                     -->
    <!-- ============================================ -->

    <!-- Tree View -->
    <record id="view_sama_promis_compliance_profile_tree" model="ir.ui.view">
        <field name="name">sama.promis.compliance.profile.tree</field>
        <field name="model">sama.promis.compliance.profile</field>
        <field name="arch" type="xml">
            <list string="Profils de Conformité" 
                  decoration-muted="is_active==False">
                <field name="name"/>
                <field name="code"/>
                <field name="reporting_frequency"/>
                <field name="project_count"/>
                <field name="contract_count"/>
                <field name="compliance_rate" widget="progressbar"/>
                <field name="is_active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sama_promis_compliance_profile_form" model="ir.ui.view">
        <field name="name">sama.promis.compliance.profile.form</field>
        <field name="model">sama.promis.compliance.profile</field>
        <field name="arch" type="xml">
            <form string="Profil de Conformité">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_projects" type="object" class="oe_stat_button" icon="fa-folder-open">
                            <field name="project_count" widget="statinfo" string="Projets"/>
                        </button>
                        <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-text">
                            <field name="contract_count" widget="statinfo" string="Contrats"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du profil de conformité..."/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="CODE"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="donor_ids" widget="many2many_tags"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="reporting_frequency"/>
                            <field name="custom_frequency_days" invisible="reporting_frequency != 'custom'" required="reporting_frequency == 'custom'"/>
                            <field name="report_format"/>
                        </group>
                    </group>
                    
                    <group string="Exigences de Rapportage">
                        <group>
                            <field name="requires_financial_report"/>
                            <field name="requires_narrative_report"/>
                            <field name="requires_indicator_report"/>
                        </group>
                        <group>
                            <field name="report_template_id"/>
                        </group>
                    </group>
                    
                    <group string="Matrice de Conformité">
                        <group>
                            <field name="prior_review_threshold"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group>
                            <field name="approval_workflow"/>
                        </group>
                    </group>
                    
                    <group string="Paramètres de Notification">
                        <group>
                            <field name="reminder_days_before"/>
                            <field name="escalation_days_after"/>
                        </group>
                        <group>
                            <field name="notification_user_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <field name="description" widget="html" placeholder="Description détaillée des exigences de conformité..."/>
                        </page>
                        
                        <page string="Checklist de Conformité">
                            <group>
                                <field name="compliance_checklist" widget="text" placeholder='Format JSON exemple:
[
  {
    "name": "Rapport Financier Trimestriel",
    "type": "report",
    "priority": "high",
    "requires_document": true,
    "requires_approval": true
  },
  {
    "name": "Revue Environnementale",
    "type": "review",
    "priority": "critical",
    "requires_document": true
  }
]'/>
                            </group>
                        </page>
                        
                        <page string="Documents Obligatoires">
                            <group>
                                <field name="mandatory_documents" widget="text" placeholder='Format JSON exemple:
[
  "Rapport Financier Audité",
  "Rapport Narratif de Progrès",
  "Tableau des Indicateurs",
  "Plan de Passation de Marchés",
  "Rapport d\'Audit Annuel"
]'/>
                            </group>
                        </page>
                        
                        <page string="Statistiques">
                            <group>
                                <group>
                                    <field name="project_count" readonly="1"/>
                                    <field name="contract_count" readonly="1"/>
                                </group>
                                <group>
                                    <field name="compliance_rate" widget="progressbar" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_sama_promis_compliance_profile_search" model="ir.ui.view">
        <field name="name">sama.promis.compliance.profile.search</field>
        <field name="model">sama.promis.compliance.profile</field>
        <field name="arch" type="xml">
            <search string="Rechercher Profils de Conformité">
                <field name="name"/>
                <field name="code"/>
                
                <filter string="Actifs" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Inactifs" name="inactive" domain="[('is_active', '=', False)]"/>
                
                <separator/>
                
                <filter string="Mensuel" name="monthly" domain="[('reporting_frequency', '=', 'monthly')]"/>
                <filter string="Trimestriel" name="quarterly" domain="[('reporting_frequency', '=', 'quarterly')]"/>
                <filter string="Semestriel" name="semi_annual" domain="[('reporting_frequency', '=', 'semi_annual')]"/>
                <filter string="Annuel" name="annual" domain="[('reporting_frequency', '=', 'annual')]"/>
                
                <separator/>
                
                <filter string="Avec Projets" name="with_projects" domain="[('project_count', '>', 0)]"/>
                
                <group expand="0" string="Grouper Par">
                    <filter string="Fréquence de Rapportage" name="group_frequency" context="{'group_by': 'reporting_frequency'}"/>
                    <filter string="Workflow d'Approbation" name="group_approval" context="{'group_by': 'approval_workflow'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sama_promis_compliance_profile" model="ir.actions.act_window">
        <field name="name">Profils de Conformité</field>
        <field name="res_model">sama.promis.compliance.profile</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau profil de conformité
            </p>
            <p>
                Les profils de conformité définissent les exigences de rapportage et de conformité
                spécifiques à chaque bailleur de fonds. Configurez les fréquences de rapportage,
                les matrices de conformité, et les workflows d'approbation.
            </p>
        </field>
    </record>

</odoo>
