    <!-- Actions -->
    <record id="action_contract_template" model="ir.actions.act_window">
        <field name="name">Modèles de Contrat</field>
        <field name="res_model">sama.promis.contract.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_contract_template_tree_v2"/>
        <field name="view_ids" eval="[(5, 0, 0),
                                      (0, 0, {'view_mode': 'list', 'view_id': ref('view_contract_template_tree_v2')}),
                                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_contract_template_form_v2')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer votre premier modèle de contrat
            </p>
            <p>
                Les modèles de contrat permettent de standardiser la génération des contrats
                en utilisant des variables dynamiques qui seront remplacées par les données
                réelles du projet et du bénéficiaire.
            </p>
        </field>
    </record>

