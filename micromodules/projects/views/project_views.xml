<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue liste des projets -->
    <record id="view_sama_promis_project_tree" model="ir.ui.view">
        <field name="name">sama.promis.project.tree</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <tree string="Projets SAMA PROMIS" decoration-info="state=='draft'" decoration-warning="state=='under_review'" decoration-success="state=='completed'">
                <field name="reference"/>
                <field name="name"/>
                <field name="project_type"/>
                <field name="partner_id"/>
                <field name="donor_id"/>
                <field name="total_budget" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='under_review'" decoration-success="state=='completed'"/>
                <field name="priority" widget="priority"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="progress_percentage" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- Vue formulaire des projets -->
    <record id="view_sama_promis_project_form" model="ir.ui.view">
        <field name="name">sama.promis.project.form</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <form string="Projet SAMA PROMIS">
                <header>
                    <!-- Boutons d'action inspirés de SAMA ETAT -->
                    <button name="action_submit_for_review" type="object" string="Soumettre" class="oe_highlight" states="draft"/>
                    <button name="action_start_review" type="object" string="Réviser" class="oe_highlight" states="submitted"/>
                    <button name="action_approve_project" type="object" string="Approuver" class="oe_highlight" states="under_review"/>
                    <button name="action_start_implementation" type="object" string="Démarrer" class="oe_highlight" states="approved"/>
                    <button name="action_suspend_project" type="object" string="Suspendre" states="in_progress"/>
                    <button name="action_resume_project" type="object" string="Reprendre" states="suspended"/>
                    <button name="action_complete_project" type="object" string="Terminer" class="oe_highlight" states="in_progress"/>
                    <button name="action_cancel_project" type="object" string="Annuler" states="draft,submitted,under_review,approved,in_progress,suspended"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,under_review,approved,in_progress,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_qr_code" type="object" class="oe_stat_button" icon="fa-qrcode">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">QR Code</span>
                            </div>
                        </button>
                        <button name="action_view_contracts" type="object" class="oe_stat_button" icon="fa-file-contract">
                            <field name="contract_ids" widget="statinfo" string="Contrats"/>
                        </button>
                        <button name="action_view_payments" type="object" class="oe_stat_button" icon="fa-money-bill">
                            <field name="payment_ids" widget="statinfo" string="Paiements"/>
                        </button>
                        <button name="action_view_evaluations" type="object" class="oe_stat_button" icon="fa-chart-line">
                            <field name="evaluation_ids" widget="statinfo" string="Évaluations"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nom du projet"/>
                        </h1>
                        <h2>
                            <field name="reference" readonly="1"/>
                        </h2>
                    </div>
                    
                    <group>
                        <group>
                            <field name="project_type"/>
                            <field name="priority"/>
                            <field name="partner_id"/>
                            <field name="donor_id"/>
                            <field name="call_for_proposal_id"/>
                        </group>
                        <group>
                            <field name="total_budget"/>
                            <field name="currency_id"/>
                            <field name="donor_contribution"/>
                            <field name="partner_contribution"/>
                            <field name="progress_percentage" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" nolabel="1" placeholder="Description détaillée du projet"/>
                                <field name="objectives" string="Objectifs"/>
                                <field name="expected_results" string="Résultats Attendus"/>
                            </group>
                        </page>
                        
                        <page string="Dates et Localisation">
                            <group>
                                <group string="Dates">
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="submission_date"/>
                                    <field name="approval_date"/>
                                    <field name="actual_start_date"/>
                                    <field name="actual_end_date"/>
                                    <field name="deadline"/>
                                </group>
                                <group string="Localisation">
                                    <field name="region"/>
                                    <field name="department"/>
                                    <field name="commune"/>
                                    <field name="target_population"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Partenaires">
                            <field name="implementing_partner_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="partner_type"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="Finances">
                            <group>
                                <group string="Budget">
                                    <field name="spent_amount"/>
                                    <field name="remaining_budget"/>
                                    <field name="budget_utilization_rate" widget="progressbar"/>
                                </group>
                                <group string="Indicateurs">
                                    <field name="duration_days"/>
                                    <field name="is_delayed"/>
                                    <field name="delay_days" attrs="{'invisible': [('is_delayed', '=', False)]}"/>
                                    <field name="days_to_deadline"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="QR Code">
                            <group>
                                <field name="qr_code_image" widget="image" options="{'size': [200, 200]}"/>
                                <field name="qr_code_url" widget="url"/>
                            </group>
                        </page>
                        
                        <page string="Audit">
                            <group>
                                <group string="Création">
                                    <field name="created_by" readonly="1"/>
                                    <field name="created_date" readonly="1"/>
                                </group>
                                <group string="Modification">
                                    <field name="last_modified_by" readonly="1"/>
                                    <field name="last_modified_date" readonly="1"/>
                                    <field name="version" readonly="1"/>
                                </group>
                            </group>
                            <field name="state_history" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vue kanban des projets -->
    <record id="view_sama_promis_project_kanban" model="ir.ui.view">
        <field name="name">sama.promis.project.kanban</field>
        <field name="model">sama.promis.project</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="donor_id"/>
                <field name="total_budget"/>
                <field name="progress_percentage"/>
                <field name="priority"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle text-muted">
                                        <field name="reference"/>
                                    </small>
                                </div>
                                <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                    </a>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="total_budget" widget="monetary"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="progress_percentage" widget="progressbar"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Action pour les projets -->
    <record id="action_sama_promis_project" model="ir.actions.act_window">
        <field name="name">Projets</field>
        <field name="res_model">sama.promis.project</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Créer un nouveau projet SAMA PROMIS
            </p>
            <p>
                Gérez vos projets de bailleurs de fonds internationaux avec des cycles de vie complets,
                des QR codes automatiques et un suivi détaillé.
            </p>
        </field>
    </record>
</odoo>