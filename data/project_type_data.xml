<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Remove project templates to avoid constraint violations -->
        <!-- Project categories will be created dynamically when needed -->

        <!-- Default Project Stages for SAMA PROMIS -->
        <record id="project_stage_draft" model="project.task.type">
            <field name="name">Brouillon</field>
            <field name="sequence">10</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="project_stage_submitted" model="project.task.type">
            <field name="name">Soumis</field>
            <field name="sequence">20</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="project_stage_under_review" model="project.task.type">
            <field name="name">En Évaluation</field>
            <field name="sequence">30</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="project_stage_approved" model="project.task.type">
            <field name="name">Approuvé</field>
            <field name="sequence">40</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="project_stage_in_progress" model="project.task.type">
            <field name="name">En Cours</field>
            <field name="sequence">50</field>
            <field name="fold" eval="False"/>
        </record>

        <record id="project_stage_suspended" model="project.task.type">
            <field name="name">Suspendu</field>
            <field name="sequence">60</field>
            <field name="fold" eval="True"/>
        </record>

        <record id="project_stage_completed" model="project.task.type">
            <field name="name">Terminé</field>
            <field name="sequence">70</field>
            <field name="fold" eval="True"/>
        </record>

        <record id="project_stage_cancelled" model="project.task.type">
            <field name="name">Annulé</field>
            <field name="sequence">80</field>
            <field name="fold" eval="True"/>
        </record>

        <!-- Séquences déplacées dans data/sequences.xml -->

    </data>
</odoo>
