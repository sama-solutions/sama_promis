<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- IR Sequence for Contracts -->
        <record id="seq_sama_promis_contract" model="ir.sequence">
            <field name="name">SAMA PROMIS Contract Sequence</field>
            <field name="code">sama.promis.contract</field>
            <field name="prefix">CONT-</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range" eval="False"/>
        </record>

        <!-- IR Sequence for Payment Requests -->
        <record id="seq_sama_promis_payment_request" model="ir.sequence">
            <field name="name">SAMA PROMIS Payment Request Sequence</field>
            <field name="code">sama.promis.payment.request</field>
            <field name="prefix">PAY-REQ-</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range" eval="False"/>
        </record>

        <!-- IR Sequence for Call for Proposals -->
        <record id="seq_sama_promis_call_proposal" model="ir.sequence">
            <field name="name">SAMA PROMIS Call for Proposal Sequence</field>
            <field name="code">sama.promis.call.proposal</field>
            <field name="prefix">CFP-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range" eval="True"/>
        </record>

        <!-- IR Sequence for Project Events -->
        <record id="seq_sama_promis_project_event" model="ir.sequence">
            <field name="name">SAMA PROMIS Project Event Sequence</field>
            <field name="code">sama.promis.project.event</field>
            <field name="prefix">EVT-</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range" eval="False"/>
        </record>

    </data>
</odoo>
