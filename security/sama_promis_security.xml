<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Groupes de sécurité SAMA PROMIS -->
    <record id="group_sama_promis_user" model="res.groups">
        <field name="name">SAMA PROMIS: Utilisateur</field>
        <field name="category_id" ref="base.module_category_project"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_sama_promis_manager" model="res.groups">
        <field name="name">SAMA PROMIS: Gestionnaire</field>
        <field name="category_id" ref="base.module_category_project"/>
        <field name="implied_ids" eval="[(4, ref('group_sama_promis_user'))]"/>
    </record>

    <record id="group_sama_promis_admin" model="res.groups">
        <field name="name">SAMA PROMIS: Administrateur</field>
        <field name="category_id" ref="base.module_category_project"/>
        <field name="implied_ids" eval="[(4, ref('group_sama_promis_manager')), (4, ref('base.group_system'))]"/>
    </record>

    <!-- Règles de sécurité pour les projets -->
    <record id="sama_promis_project_rule_user" model="ir.rule">
        <field name="name">SAMA PROMIS Project: User Access</field>
        <field name="model_id" ref="model_sama_promis_project"/>
        <field name="domain_force">['|', ('created_by', '=', user.id), ('partner_id.user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sama_promis_project_rule_manager" model="ir.rule">
        <field name="name">SAMA PROMIS Project: Manager Access</field>
        <field name="model_id" ref="model_sama_promis_project"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Règles de sécurité pour les tags -->
    <record id="sama_promis_tag_rule_all" model="ir.rule">
        <field name="name">SAMA PROMIS Tag: All Access</field>
        <field name="model_id" ref="model_sama_promis_tag"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Règles de sécurité pour les profils de conformité -->
    <record id="sama_promis_compliance_profile_rule_user" model="ir.rule">
        <field name="name">SAMA PROMIS Compliance Profile: User Access</field>
        <field name="model_id" ref="model_sama_promis_compliance_profile"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="False"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sama_promis_compliance_profile_rule_manager" model="ir.rule">
        <field name="name">SAMA PROMIS Compliance Profile: Manager Access</field>
        <field name="model_id" ref="model_sama_promis_compliance_profile"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>

    <!-- Règles de sécurité pour les tâches de conformité -->
    <record id="sama_promis_compliance_task_rule_user" model="ir.rule">
        <field name="name">SAMA PROMIS Compliance Task: User Access</field>
        <field name="model_id" ref="model_sama_promis_compliance_task"/>
        <field name="domain_force">['|', ('responsible_id', '=', user.id), ('project_id.created_by', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <record id="sama_promis_compliance_task_rule_manager" model="ir.rule">
        <field name="name">SAMA PROMIS Compliance Task: Manager Access</field>
        <field name="model_id" ref="model_sama_promis_compliance_task"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_manager'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
</odoo>