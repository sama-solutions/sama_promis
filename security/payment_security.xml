<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Payment Security Groups -->
    <record id="group_sama_promis_payment_user" model="res.groups">
        <field name="name">SAMA PROMIS / Payment User</field>
        <field name="category_id" ref="base.module_category_services_project"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_sama_promis_payment_manager" model="res.groups">
        <field name="name">SAMA PROMIS / Payment Manager</field>
        <field name="category_id" ref="base.module_category_services_project"/>
        <field name="implied_ids" eval="[(4, ref('group_sama_promis_payment_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="sama_promis_payment_rule_user" model="ir.rule">
        <field name="name">SAMA PROMIS: User can only see their payment requests</field>
        <field name="model_id" ref="model_sama_promis_payment_request"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_payment_user'))]"/>
    </record>

    <record id="sama_promis_payment_rule_manager" model="ir.rule">
        <field name="name">SAMA PROMIS: Manager can see all payment requests</field>
        <field name="model_id" ref="model_sama_promis_payment_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_sama_promis_payment_manager'))]"/>
    </record>
</odoo>
