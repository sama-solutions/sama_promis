<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Evaluation Security Groups -->
    <record id="group_sama_promis_evaluator" model="res.groups">
        <field name="name">SAMA PROMIS / Ã‰valuateur</field>
        <field name="category_id" ref="base.module_category_services_project"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="sama_promis_evaluation_rule_user" model="ir.rule">
        <field name="name">SAMA PROMIS: User can only see their evaluations</field>
        <field name="model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="domain_force">['|', ('evaluator_id', '=', user.id), ('project_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="sama_promis_evaluation_rule_manager" model="ir.rule">
        <field name="name">SAMA PROMIS: Manager can see all evaluations</field>
        <field name="model_id" ref="model_sama_promis_project_evaluation"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('sama_promis.group_sama_promis_manager'))]"/>
    </record>
</odoo>
